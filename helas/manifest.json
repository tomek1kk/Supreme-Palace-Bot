{
  "manifest_version": 2,

  "name": "Helas bot",
  "description": "",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Helas bot"
  },
  "content_scripts": [
      {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["addToBasket.js"]
      }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ]
}
