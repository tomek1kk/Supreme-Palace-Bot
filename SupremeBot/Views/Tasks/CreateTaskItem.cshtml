@model SupremeBot.Models.TaskItem

@{
    ViewData["Title"] = "CreateTaskItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateTaskItem</h2>

<h4>TaskItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTaskItem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Delay" class="control-label"></label>
                <input asp-for="Delay" class="form-control" />
                <span asp-validation-for="Delay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RefreshInterval" class="control-label"></label>
                <input asp-for="RefreshInterval" class="form-control" />
                <span asp-validation-for="RefreshInterval" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="OnlyWithEmptyBasket" /> @Html.DisplayNameFor(model => model.OnlyWithEmptyBasket)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="UseTimer" /> @Html.DisplayNameFor(model => model.UseTimer)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="AnyColor" /> @Html.DisplayNameFor(model => model.AnyColor)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="FillAdress" /> @Html.DisplayNameFor(model => model.FillAdress)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

